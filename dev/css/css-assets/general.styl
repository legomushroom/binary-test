.c-grey2-g
	color c-grey2
.c-grey2-hover-g
	color c-grey2-hover

.c-grey3-g
	color c-grey3
// COLORS

// FONT
.line-thru-gm, .line-through-gm
	position: relative
	&:after
		content ''
		position: absolute
		top 50%
		left 0
		width 100%
		margin-top 1px
		border-top 2px solid

.bold-gm
	font-weight bold

// FONT


.op-0-gm
	opacity 0
.op-5-gm
	opacity .5

a, .link-e
	text-decoration none
	position relative
	color inherit
 
	&.is-hoverable, &.is-check
		&:after
			content ''
			position absolute
			display none
			color inherit

			width 100%
			height 0
			left -1px

			bottom - (gs/2)
			border-top 4px solid c-red

		&:hover
			// 4!
			&:after
				display block

