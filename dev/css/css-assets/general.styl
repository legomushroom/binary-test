// GENERAL
@import '../assets/imports.styl'

*
	bbox()

body, html
	min-rect 100%
	margin 0
	padding 0
	overflow-x hidden

body
	background-color c-bg
	font-family 'infinity', monospace
	letter-spacing 1px

@css{
	::selection{
		background-color: #f59995;
	  color: white;
	  text-shadow: none;
	}

	::-moz-selection{
		background-color: #f59995;
	  color: white;
	  text-shadow: none;
	}
	
}


// COLORS
.c-grey1-g
